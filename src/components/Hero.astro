---
import { Image } from "astro:assets"
import HeroImage from "../images/image-hero.webp"
---

<section class="bg-purple-100">
    <div
        class="hero-bg curve flex flex-col items-center gap-10 bg-purple-900 px-5 pb-[8.75rem] pt-14 text-white sm:px-11 sm:pb-44 sm:pt-14 lg:pb-80"
    >
        <h1 class="text-center font-serif text-5xl font-semibold leading-[3.5rem] sm:text-6xl md:text-wrap lg:text-8xl">
            Data <span class="decoration-3 underline decoration-green underline-offset-8">tailored</span>
            <br class="sm:hidden" />
            to
            <br />
            your needs.
        </h1>
        <a class="button" href="#">Learn More</a>
    </div>
    <div class="relative z-50 -mt-20 flex justify-center sm:-mt-32 lg:-mt-56">
        <div class="flex max-w-80 justify-center sm:max-w-[32.125rem] lg:max-w-3xl">
            <Image
                src={HeroImage}
                alt=""
                loading="eager"
                widths={[320, 514, 767]}
                sizes="(max-width: 640px) 320px, (max-width: 1023px) 514px, 767px"
            />
        </div>
    </div>
</section>

<style>
    @screen sm {
        .hero-bg {
            background-image: url("../images/bg-pattern-1.svg"), url("../images/bg-pattern-2.svg");
            background-repeat: no-repeat;
            background-position:
                -13.5rem 1rem,
                calc(100% + 6rem) calc(100% - 1rem);
        }
    }

    @screen xl {
        .hero-bg {
            background-position:
                -6.5rem 4rem,
                calc(100% + 3rem) calc(100% - 12rem);
        }
    }
</style>
